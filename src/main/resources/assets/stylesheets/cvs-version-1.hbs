@font-face {
font-family: nta;
font-weight: 100;
src: url({{root}}/assets/fonts/NTA-Light.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: nta-bold;
font-weight: 700;
src: url({{root}}/assets/fonts/NTA-Bold.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: gds-transport;
font-weight: 400;
src: url({{root}}/assets/fonts/GDSTransportWebsite.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@page {
size: A4;
margin: 1cm auto 175px auto;
@top-center {
content: element(header)
}
@bottom-center {
content: element(footer)
}
}

@page :first {
@bottom-center {
content: element(footer-first-page)
}
}

body,
html {
font-family: nta;
font-weight: 100;
line-height: 1;
margin: 0;
-fs-page-sequence: start;
page-break-before: always
}

*,
:after,
:before {
box-sizing: border-box;
line-height: 1
}

.clearfix {
clear: both
}

.util-avoid-page-break-inside {
page-break-inside: avoid
}

.certificate {
width: 21cm
}

.certificate__wrapper {
width: 19cm;
margin: 0 auto
}

.circle-text__number {
font-size: 6pt;
line-height: 6pt;
font-family: nta;
font-weight: 100;
display: block;
position: absolute;
top: 1pt;
width: 100%;
text-align: center

}

.running-header {
position: running(header)
}

.running-header__inner {
width: 19cm;
margin: 0 auto
}

.running-header__text {
text-align: center;
display: block;
font-size: 20px
}

.heading-info {
margin: 0 0 11pt
}

.heading-info--no-margin {
margin: 0
}

.heading-info--avoid-page-break-inside {
page-break-inside: avoid
}

.heading-info__title {
margin: 0 0 5pt;
position: relative;
font-size: 12pt;
line-height: 12pt
}

.heading-info__title-left {
position: absolute;
top: 2pt;
left: 0
}

.heading-info__title-right {
padding-left: 11pt
}

.heading-info__title-message {
font-family: gds-transport;
font-weight: 400
}

.heading-info__content {
font-family: nta-bold;
font-weight: 700;
font-size: 12pt;
display: block
}

.heading-info__content--uppercase {
text-transform: uppercase
}

.header:after {
content: " ";
display: block;
clear: both
}

.header__left {
width: 394pt;
float: left
}

.header__right {
float: left
}

.header__logo {
width: 143.861pt
}

.header__title {
margin: 0 0 11pt;
font-family: nta-bold;
font-weight: 700;
font-size: 18pt
}

.header__two-columns {
display: table
}

.header__two-columns-one,
.header__two-columns-two {
width: 133.3333pt;
display: table-cell;
vertical-align: top
}

.header__three-columns {
display: table;
width: 100%;
}

.header__three-columns--welsh:before {
content: " ";
display: block;
clear: both
}

.header__three-columns-one {
width: 133.3333pt;
display: table-cell;
vertical-align: top
}

.header__three-columns-two {
min-width: 120.3333pt;
max-width: 300pt;
display: table-cell;
vertical-align: top
}

.header__three-columns-three {
width: 163.3333pt;
display: table-cell;
vertical-align: top
}

.header__three-columns-three-wide {
min-width: 183.3333pt;
max-width: 250pt;
display: table-cell;
vertical-align: top
}

.header__three-columns--welsh .header__three-columns-three {
width: 200pt;
padding-left: 20pt
}

.header__histories {
list-style: none;
padding: 0;
margin: 0
}

.header__histories:after {
content: " ";
display: block;
clear: both
}

.header__history {
margin-bottom: 4pt
}

.header__history:after {
content: " ";
display: block;
clear: both
}

.header__history:last-child {
margin-bottom: 0
}

.header__history-left {
float: left;
width: 90pt
}

.header__history-left-wide {
float: left;
min-width: 150pt;
max-width: 300pt
}

.header__three-columns--welsh .header__history-left {
width: 120pt
}

.header__history-right {
float: left;
padding-left: 5pt
}

.header__history-mileage {
display: block;
font-family: nta-bold;
font-weight: 700
}

.header__history-date {
display: block;
font-family: nta-bold;
font-weight: 700
}

.results__wrapper {
border-left: 10pt solid #9e9e9e;
padding: 8.5pt 0 8.5pt 20pt;
margin-bottom: 11pt
}

.results--welsh .results__wrapper {
padding-left: 10pt
}

.results__item {
margin-bottom: 11pt
}

.results__item:last-child {
margin-bottom: 0
}

.results__heading-and-first-item {
page-break-inside: avoid
}

.results__heading {
position: relative;
margin: 0 0 5pt
}

.results__heading--without-number {
padding-left: 15pt
}

.results__heading-left {
position: absolute;
top: 5.5pt;
left: 0
}

.results__heading-right {
padding-left: 13pt;
display: block
}

.results__heading-message {
display: block;
font-family: nta-bold;
font-weight: 700;
font-size: 18pt
}

.results--welsh .results__heading-message {
font-size: 16pt
}

.results__heading-right--has-icon .results__heading-message {
display: inline-block;
position: relative;
padding-right: 32pt
}

.results__heading-icon {
display: inline-block;
position: absolute;
bottom: -3pt;
right: -5pt
}

.results__heading-icon-img {
height: 27pt
}

.results__list {
list-style: none;
margin: 0;
padding: 0 0 0 16pt
}

.results__list-item {
display: block;
margin: 0 0 4pt;
position: relative;
padding-left: 8pt;
page-break-inside: avoid
}

.results__list-item:before {
content: "\2022";
display: block;
position: absolute;
top: 0;
left: 0
}

.results__list--no-bullet-points .results__list-item {
padding-left: 0
}

.results__list--no-bullet-points .results__list-item:before {
display: none
}

.results__list-text {
display: block
}

.test-information__two-columns {
display: table
}

.test-information__two-columns-one,
.test-information__two-columns-two {
display: table-cell;
vertical-align: top;
width: 150pt
}

.test-information__message {
font-family: nta;
font-weight: 100;
margin: 0 0 5pt;
font-size: 12pt;
line-height: 16pt
}

.test-information__message--limit-width {
max-width: 75%
}

.test-information__message--margin-top {
margin-top: 5pt
}

.test-information__message-link {
text-decoration: none;
color: #000;
font-family: nta-bold;
font-weight: 700
}

.footer {
position: running(footer)
}

.footer--first-page {
position: running(footer-first-page)
}

.footer__wrapper {
width: 19cm;
margin: 0 auto
}

.footer__top {
text-align: right;
position: relative
}

.footer__top-signature-line {
width: 50%;
border-bottom: 2px solid black;
float:right;
}

.footer__bottom {
display: table;
width: 100%;
padding-top: 8px
}

.footer__bottom-one {
text-align: left
}

.footer__bottom-one,
.footer__bottom-two {
width: 33.333%;
display: table-cell;
vertical-align: middle
}

.footer__bottom-two {
text-align: center
}

.footer__bottom-three {
width: 33.333%;
display: table-cell;
vertical-align: middle;
text-align: right
}

.footer__bottom-light-text {
display: block;
font-family: nta;
font-weight: 100
}

.footer__bottom-bold-text {
display: block
}

.footer__bottom-bold-text,
.footer__bottom-page-counter-text {
font-family: nta-bold;
font-weight: 700
}

.footer__bottom-page-counter-text--vin:first-of-type {
visibility: hidden
}

.footer__bottom-page-counter-text--page-number:before {
content: counter(page)
}

.footer__bottom-page-counter-text--pages-count:before {
content: counter(pages)
}

.footer__signature-text {
font-size: 12pt;
font-family: nta;
font-weight: 100;
margin: 0;
padding: 0;
white-space: nowrap
}

.footer__certificate-tag {
text-align: center;
margin-top: 5px
}

.footer__certificate-tag-text {
display: block;
font-family: nta;
font-weight: 100
}

.footer__signature-image {
display: block;
}

.seat-belt-information__two-columns {
display: table;
margin-bottom: 11pt
}

.seat-belt-information__two-columns-one,
.seat-belt-information__two-columns-two {
width: 50%;
display: table-cell;
vertical-align: top;
text-align: left
}

.signature-image {
height:auto;
width: 100px;
text-align: right;
margin-right: 1cm;
}

.signature-image__wrapper {
width:100%;
text-align: right;
}

.issuer-signature-text {
text-align: right;
clear:both;
float:right;
margin-top:5px;
}

.seat-belt-information__padding-left {
padding-left: 20px;
}

.seat-belt-information__height {
min-height: 1em;
clear:both;
}
